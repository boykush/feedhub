#!/usr/bin/env bash
#MISE description="Build and load bff Docker image to kind cluster"

IMAGE="bff-service:latest"

echo "Building image: ${IMAGE}"
cd "services/bff" || exit 1
docker build -t "$IMAGE" .
cd - > /dev/null

echo "Loading image: ${IMAGE}"
kind load docker-image "${IMAGE}" --name foresee

echo "Done!"
